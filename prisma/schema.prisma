generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== USER & AUTH ====================
model User {
  id            String     @id @default(cuid())
  name          String?
  username      String?    @unique // Custom slug
  lastUsernameChange DateTime? // For 3-month restriction
  email         String     @unique
  emailVerified DateTime?
  image         String?
  password      String?    // For credentials provider
  role          Role       @default(USER)
  bio           String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  // Account Status (Soft Delete)
  isDeleted     Boolean    @default(false)
  deletedAt     DateTime?

  // Notification Preferences
  notifyUpdates    Boolean @default(true) // Email Notifications (General)
  notifyComments   Boolean @default(true) // New Comments
  notifySubmission Boolean @default(true) // Submission Status

  // Relations
  accounts      Account[]
  sessions      Session[]
  writings      Writing[]
  blogPosts     BlogPost[]
  comments      Comment[]
  tributes      Tribute[]

  // Social
  followedBy    User[]     @relation("UserFollows")
  following     User[]     @relation("UserFollows")
}

enum Role {
  USER
  SUPER_ADMIN
  ADMIN
  EDITOR
  MANAGER
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== CONTENT ====================
model Category {
  id        String      @id @default(cuid())
  name      String      // বাংলা নাম: "প্রকৃতি", "দেশাত্মবোধক"
  slug      String      @unique // "nature", "patriotic"
  type      ContentType
  createdAt DateTime    @default(now())

  writings  Writing[]
  blogPosts BlogPost[]
}

enum ContentType {
  POEM
  SONG
  ESSAY
  BLOG
}

model Book {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  subtitle    String?
  description String?   @db.Text
  year        String?
  publisher   String?
  coverImage  String?
  categoryId  String    // "poetry", "songs", "essays"
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  writings    Writing[]
}

model Writing {
  id          String      @id @default(cuid())
  slug        String      @unique
  title       String
  type        WritingType
  content     String      @db.Text
  excerpt     String?     @db.Text
  readTime    String?
  year        String?
  composer    String?     // For songs
  views       Int         @default(0)
  likes       Int         @default(0)
  status      Status      @default(PUBLISHED)
  featured    Boolean     @default(false)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  bookId      String?
  book        Book?       @relation(fields: [bookId], references: [id])
  categoryId  String?
  category    Category?   @relation(fields: [categoryId], references: [id])
  authorId    String?
  author      User?       @relation(fields: [authorId], references: [id])
  comments    Comment[]

  @@index([type, status])
  @@index([bookId])
}

enum WritingType {
  POEM
  SONG
  ESSAY
  RHYME
  ARTICLE
}

enum Status {
  DRAFT
  PENDING
  PUBLISHED
  ARCHIVED
}

// ==================== BLOG ====================
model BlogPost {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  excerpt     String    @db.Text
  content     String    @db.Text
  coverImage  String?
  readTime    String?
  views       Int       @default(0)
  featured    Boolean   @default(false)
  status      Status    @default(PENDING)
  tags        String[]  // PostgreSQL array
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  // Relations
  authorId    String
  author      User      @relation(fields: [authorId], references: [id])
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  comments    Comment[]

  @@index([status, featured])
  @@index([authorId])
}

// ==================== INTERACTIONS ====================
model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId     String
  user       User      @relation(fields: [userId], references: [id])
  writingId  String?
  writing    Writing?  @relation(fields: [writingId], references: [id])
  blogPostId String?
  blogPost   BlogPost? @relation(fields: [blogPostId], references: [id])

  @@index([writingId])
  @@index([blogPostId])
}

model Tribute {
  id        String   @id @default(cuid())
  content     String   @db.Text
  district    String?  // User's selected district (জেলা)
  name        String?  // Manual entry: Guest/Offline Author Name
  designation String?  // Manual entry: Designation/Title
  manualDate  DateTime? // Manual entry: Custom date
  isFeatured  Boolean  @default(false) // Elite/VIP Tribute
  displayOption String @default("DISTRICT") // "DISTRICT" or "DESIGNATION"
  status      Status   @default(PENDING)
  createdAt   DateTime @default(now())

  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
}

// ==================== MEDIA ====================
model GalleryImage {
  id          String   @id @default(cuid())
  title       String?
  description String?
  url         String
  year        String?
  location    String?
  featured    Boolean  @default(false)
  status      Status   @default(PUBLISHED)
  submittedBy String?  // User ID if user-submitted
  createdAt   DateTime @default(now())
}

model Audio {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  artist      String?
  album       String?
  albumSlug   String?
  duration    String?
  audioUrl    String
  coverImage  String?
  lyrics      String?  @db.Text
  views       Int      @default(0)
  status      Status   @default(PUBLISHED)
  submittedBy String?  // User ID if user-submitted
  createdAt   DateTime @default(now())
}

model Video {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?  @db.Text
  youtubeId   String
  thumbnail   String?
  duration    String?
  views       Int      @default(0)
  category    String?
  featured    Boolean  @default(false)
  status      Status   @default(PUBLISHED)
  submittedBy String?  // User ID if user-submitted
  createdAt   DateTime @default(now())
}

// ==================== SITE SETTINGS ====================
model SiteSettings {
  id          String   @id @default("main")
  siteName    String   @default("মতিউর রহমান মল্লিক")
  siteDescription String? @db.Text
  contactEmail String?
  biography   String?  @db.Text // জীবনী content (Legacy, keeping for safety)
  biographyShort String? @db.Text

  // New Biography Fields
  heroTitle       String?  @default("মতিউর রহমান মল্লিক")
  heroDescription String?  @db.Text
  bornDate        String?  @default("১ মার্চ ১৯৫৪")
  bornPlace       String?  @default("বারুইপাড়া, বাগেরহাট")
  deathDate       String?  @default("১২ আগস্ট ২০১০")
  occupation      String?  @default("কবি, সাহিত্যিক, গীতিকার")
  
  earlyLife       String?  @db.Text
  philosophy      String?  @db.Text
  career          String?  @db.Text
  deathSection    String?  @db.Text
  
  timeline        Json?    // Array of {year, title, desc}
  organizations   Json?    // Array of {name, description, iconOrType}
  quotes          Json?    // Array of strings
  awards          Json?    // Array of strings or {title, year}
  literaryWorks   Json?    // {poetry: [], songs: []}

  socialLinks Json?    // {facebook, youtube, twitter etc}

  // Dynamic Footer Links
  footerExplore Json?  // Array of {name, href}
  footerAbout   Json?  // Array of {name, href}
  footerConnect Json?  // Array of {name, href}

  updatedAt   DateTime @updatedAt
}

// ==================== CONTACT SUBMISSIONS ====================
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String   @db.Text
  status    ContactStatus @default(UNREAD)
  createdAt DateTime @default(now())
}

enum ContactStatus {
  UNREAD
  READ
  REPLIED
  ARCHIVED
}

// ==================== SUBMISSION OPTIONS ====================
// Dynamic options for submission form (blog/new page)
model SubmissionOption {
  id         String     @id @default(cuid())
  type       OptionType
  name       String
  icon       String?    // Lucide icon name (e.g., "Heart", "Music")
  order      Int        @default(0)
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([type, isActive])
  @@index([type, order])
}

enum OptionType {
  DESIGNATION        // পরিচয়: পাঠক, ভক্ত, কবি, সাহিত্যিক...
  ORGANIZATION_TYPE  // প্রতিষ্ঠানের ধরন: সাহিত্য সংগঠন...
  BLOG_CATEGORY      // ব্লগ/প্রবন্ধ ক্যাটাগরি
  POEM_CATEGORY      // কবিতা ক্যাটাগরি
  PHOTO_CATEGORY     // ছবিঘর ক্যাটাগরি
  AUDIO_CATEGORY     // অডিও ক্যাটাগরি
  VIDEO_CATEGORY     // ভিডিও ক্যাটাগরি
}

// ==================== NEWSLETTER ====================
model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}
